@model IEnumerable<Web_Proje.Models.Books>
@{ ViewData["Title"] = "Home Page"; }

<div class="container-fluid bg-3 text-center">

    @foreach (var item in Model.Reverse())
     { 
        @if (item.kitapID == ViewBag.id)
         {
            <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.kitapAdi)</h5>
            </div>
            <br /> 

            <div class="row">
                <div class="col-sm-6">
                    <img style="width: 100%;" src="@Html.DisplayFor(modelItem => item.link)" alt="Card image cap">
                    <br />
                    <p>İlk Basım Tarihi: @Html.DisplayFor(modelItem => item.basimYili)</p>
                    <br />
                    <p>Sayfa Sayısı: @Html.DisplayFor(modelItem => item.sayfaSayisi)</p>
                </div>

                <div class="col-sm-6">
                    <p>@Html.DisplayFor(modelItem => item.konu)</p>
                </div>
            </div>
         }
 
     }
</div>
