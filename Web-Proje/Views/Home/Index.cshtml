@model IEnumerable<Web_Proje.Models.Books>
@{ ViewData["Title"] = "Home Page"; }

<div class="position-relative">
    <img class="book-picture" src="~/pictures/books.jpg" />
    <div class="beyaz centered">@ViewData["kitaplarınDünyası"]</div>
</div>

<br />
<br />
<hr />
<div class="container-fluid bg-3 text-center">
    <h3>@ViewData["sonEklenenKitaplar"]</h3><br>
    
    <div class="row">
        @foreach (var item in Model.Reverse().Take(4))
        {
            <div class="col-sm-3">
                <a asp-area="" asp-controller="Home" asp-action="Book" asp-route-id="@item.kitapID">
                    <img style="width: 100%; height:400px" src="@Html.DisplayFor(modelItem => item.link)" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.kitapAdi)</h5>
                    </div>
                </a>
            </div>}
    </div>
</div>
<br>
<a class="link-tg" asp-area="" asp-controller="Home" asp-action="Books">@ViewData["tümünüGörüntüle"]</a>
<br>
<br>
<hr />
