@model Web_Proje.Models.Books

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["detaylar"]</h1>

<div>
    <h4>@ViewData["kitaplar"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @ViewData["kitapBasligi"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kitapAdi)
        </dd>
        <dt class="col-sm-2">
            @ViewData["ilkBasimYili"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.basimYili)
        </dd>
        <dt class="col-sm-2">
            @ViewData["yazar"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.yazar)
        </dd>
        <dt class="col-sm-2">
            @ViewData["sayfaSayisi"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.sayfaSayisi)
        </dd>
        <dt class="col-sm-2">
            @ViewData["konu"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.konu)
        </dd>
        <dt class="col-sm-2">
            @ViewData["resimLinki"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.link)
        </dd>
        <dt class="col-sm-2">
            @ViewData["kategori"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.kategori)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.kitapID">@ViewData["duzenle"]</a> |
    <a asp-action="Index">@ViewData["listeyeDon"]</a>
</div>
