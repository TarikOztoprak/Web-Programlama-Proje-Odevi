@model Web_Proje.Models.Books

@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["sil"]</h1>

<h3>@ViewData["uyari"]</h3>
<div>
    <h4>@ViewData["kitaplar"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @ViewData["kitapBasligi"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.kitapAdi)
        </dd>
        <dt class="col-sm-2">
            @ViewData["ilkBasimYili"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.basimYili)
        </dd>
        <dt class="col-sm-2">
            @ViewData["yazar"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.yazar)
        </dd>
        <dt class="col-sm-2">
            @ViewData["sayfaSayisi"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.sayfaSayisi)
        </dd>
        <dt class="col-sm-2">
            @ViewData["konu"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.konu)
        </dd>
        <dt class="col-sm-2">
            @ViewData["resimLinki"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.link)
        </dd>
        <dt class="col-sm-2">
            @ViewData["kategori"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.kategori)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="kitapID" />
        <input type="submit" value="@ViewData["sil"]" class="btn btn-danger" /> |
        <a asp-action="Index">@ViewData["listeyeDon"]</a>
    </form>
</div>
